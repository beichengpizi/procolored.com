<script>
  // 关键：使用页面独有的localStorage KEY，确保每个页面的进度缓存独立
  const PROGRESS_TIME_KEY = 'full_discount_banner_progress_ts_' + encodeURIComponent(window.location.pathname);

  // 关键：获取Dom元素，控制进度条动画与显示
  const bar = document.getElementById('full-discount-banner-progress-bar');
  const progressTrack = bar.querySelector('.full-discount-banner-progress-track');          // 进度槽
  const progressThumb = bar.querySelector('.full-discount-banner-progress-thumb');          // 滑块
  const progressInfoTextValue = document.querySelector('.full-discount-banner-progress-info-text-value'); // 文本显示百分比

  // 当前动画最大值（实际用不到，由Liquid注入，但代码未使用此变量）
  let maximum_random_value = {{ full_discount_progress_value | default: 100 }};

  /**
   * 关键：生成1~60之间的随机整数
   * @returns {number}
   */
  function getRandomInt1To60() {
    return Math.floor(Math.random() * 60) + 1;
  }

  /**
   * 关键：更新进度条动画样式和进度信息
   * @param {number} v - 当前进度0~100
   */
  function updateProgressElements(v) {
    const p = Math.max(0, Math.min(100, v)); // 限制为 0~100
    bar.style.setProperty('--p', p + '%');
    progressInfoTextValue.textContent = Math.round(p); // 显示整数百分比  

    // 设置渐变宽度动画
    progressTrack.style.background = `linear-gradient(90deg,#ff00b8 0%, #7a5cff 35%, #00b8ff 100%) 0 0 / ${p}% 100% no-repeat, #ffffff`;
    // 设置滑块动画位置
    progressThumb.style.left = `calc(${p}% - 14px)`;
  }

  (function() {
    // 关键：进度本地缓存结构为 {value: 数字, ts: 时间戳}
    const now = Date.now();
    let valueInfoStr = localStorage.getItem(PROGRESS_TIME_KEY);
    let valueInfo = null;

    // 关键：尝试读取本地缓存
    if (valueInfoStr) {
      try {
        valueInfo = JSON.parse(valueInfoStr);
      } catch(e) {
        valueInfo = null; // 解析失败则清除
      }
    }

    // 超时时间(毫秒)，可根据需求调整。当前为1小时
    const EXPIRE_TIME = 3600000; // 关键：缓存过期时间为1小时

    let theValue;

    // 关键：首次进入/本地无缓存 或 缓存损坏 时生成随机进度，写入本地
    if (!valueInfo || typeof valueInfo.value !== "number" || typeof valueInfo.ts !== "number") {
      theValue = getRandomInt1To60();
      localStorage.setItem(PROGRESS_TIME_KEY, JSON.stringify({
        value: theValue,
        ts: now
      }));
    } else {
      // 关键：本地有缓存，判断是否过期
      if (now - valueInfo.ts > EXPIRE_TIME) {
        // 缓存超时，重新生成并写入
        theValue = getRandomInt1To60();
        localStorage.setItem(PROGRESS_TIME_KEY, JSON.stringify({
          value: theValue,
          ts: now
        }));
      } else {
        // 缓存未超时，直接用原值
        theValue = valueInfo.value;
      }
    }

