{%- liquid
  if customer
    assign profile_link = routes.account_url
  else
    assign profile_link = routes.account_login_url
  endif
-%}
<style>
  .thb-secondary-area.thb-header-right .country-switcher {
    display: none;
  }
  .show-on-desktop {
    display: inline-flex;
  }
  .show-on-mobile {
    display: none;
  }
  @media screen and (max-width: 768px) {
    .thb-secondary-area.thb-header-right .country-switcher {
      padding-left: 8px;
      height: 100%;
      align-items: center;
      display: inline-flex;
    }
    .thb-secondary-area.thb-header-right .country-switcher .countrywidth260 {
      bottom: -43px;
    }
    .show-on-desktop {
      display: none;
    }
    .show-on-mobile {
      display: inline-flex;
    }
  }
</style>
<div class="thb-secondary-area thb-header-right">
  <a
    class="thb-secondary-area-item thb-quick-search"
    href="{{ routes.search_url }}"
    title="{{ 'sections.header.search' | t }}"
  >
    {%- render 'svg-icons' with 'search' -%}
  </a>
  {%- if shop.customer_accounts_enabled -%}
    {% comment %} {% render 'user-drop-down' %} {% endcomment %}
    <div class="show-on-desktop">
      {% render 'user-drop-down' %}
    </div>
    <div class="show-on-mobile">
      {% render 'user-drop-down-mobile' %}
    </div>
  {%- endif -%}
  <a class="thb-secondary-area-item thb-secondary-cart" href="{{ routes.cart_url }}" id="cart-drawer-toggle">
    <div class="thb-secondary-item-icon">
      {% render 'svg-icons' with 'cart' %}
      <span class="thb-item-count">
        {%- if cart.item_count > 99 -%}
          {%- render 'svg-icons' with 'thb-asterisk' -%}
        {%- else -%}
          {{ cart.item_count }}
        {%- endif -%}
      </span>
    </div>
  </a>
  {%- if header_settings.show_country_switcher -%}
    {% render 'country-switcher' %}
  {%- endif -%}
</div>
