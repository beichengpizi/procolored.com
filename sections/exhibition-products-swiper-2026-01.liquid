<script>
  // 监听页面DOM加载，初始化swiper与tab交互
  document.addEventListener('DOMContentLoaded', function () {
    // swiper实例变量定义，改为动态数量以便后续扩展（此处写3以兼容原结构）
    const SWIPER_COUNT = {{ blocks_count | default: 0 }};
    if (SWIPER_COUNT == 0) { 
        return;
    }
    let swipers = Array(SWIPER_COUNT).fill(null);

    /**
     * 更新当前激活Swiper对应的左右导航按钮状态
     */
    function updateNavigationButtons(activeIdx = null) {
      swipers.forEach((swiper, i) => {
        const prevBtn = document.getElementById(`exhibition-products-swiper-promotion-prevButton-{{ section.id }}-${i}`);
        const nextBtn = document.getElementById(`exhibition-products-swiper-promotion-nextButton-{{ section.id }}-${i}`);
        if (swiper && prevBtn && nextBtn) {
          prevBtn.disabled = swiper.isBeginning;
          nextBtn.disabled = swiper.isEnd;
          // 只高亮当前激活swiper的按钮，其它不变
          if (activeIdx !== null) {
            prevBtn.classList.toggle('active', i === activeIdx);
            nextBtn.classList.toggle('active', i === activeIdx);
          }
        }
      });
    }

    /**
     * 初始化所有swiper容器
     * 每次切换tab会重新销毁并新建对应swiper，确保同步
     */
    function initAllSwipers() {
      // 先销毁已存在的swiper实例，避免内存泄漏与事件绑定重复
      swipers.forEach((swiper) => {
        if (swiper) swiper.destroy(true, true);
      });

      // 通用Swiper参数
      {% comment %} 禁止鼠标左右滑动，移动端允许 {% endcomment %}
      const baseConfig = (idx) => ({
        slidesPerView: {{- section.settings.product_num | minus: 0 -}},
        spaceBetween: {{ section.settings.card_gap | minus: 0}},
        navigation: {
          nextEl: `#exhibition-products-swiper-promotion-nextButton-{{ section.id }}-${idx}`,
          prevEl: `#exhibition-products-swiper-promotion-prevButton-{{ section.id }}-${idx}`,
        },
        scrollbar: {
          el: `.swiper-scrollbar-{{ section.id }}-${idx}`,
          hide: false,
        },
        loopedSlides: 10, // 解决循环时边界滑动问题
        observer: true,
        observeParents: true,
        // 禁止PC端鼠标拖动和滑动，仅允许移动端触摸滑动
        
         simulateTouch: true,
        allowTouchMove:  true,  
        // 事件绑定延迟到下方
        breakpoints: {
            1400: {
                slidesPerView: 3,
                spaceBetween: {{ section.settings.card_gap_mobile | minus: 0 }},
                simulateTouch: false,
                allowTouchMove: false,
              },
          1200: {
            slidesPerView: 2,
            spaceBetween: {{ section.settings.card_gap_mobile | minus: 0 }},
            simulateTouch: false,
            allowTouchMove: false,
          },
          
          768: {
            slidesPerView: 1.2,
            spaceBetween: {{ section.settings.card_gap_mobile | minus: 0 }},
            simulateTouch: true,
            allowTouchMove: true,
            slidesOffsetBefore: 16,  // 增加左侧偏移量
            slidesOffsetAfter: 16    // 增加右侧偏移量
          },
        },
      });

      // 创建swiper实例，减少冗余
      for (let i = 0; i < SWIPER_COUNT; i++) {
        swipers[i] = new Swiper(`.exhibition-products-swiper-promotion-products-swiper-container-{{ section.id }}-${i}`, baseConfig(i));
      }

      // 为每个swiper绑定slideChange与init事件
      swipers.forEach((swiper, idx) => {
        if (swiper) {
          swiper.on('slideChange', () => updateNavigationButtons(idx));
          swiper.on('init', () => updateNavigationButtons(idx));
        }
      });
    }

    // swiper初始化
    initAllSwipers();

    // ------- Tab切换逻辑 -------
    // 获取tab容器
    const tabContainer = document.getElementById('exhibition-products-swiper-tabs-{{ section.id }}');
    if (!tabContainer) return;

    // 获取所有tab元素
    const tabs = tabContainer.querySelectorAll('.exhibition-products-swiper-tab');

    // 按序获取swiper容器
    const swiperContainers = Array.from({ length: SWIPER_COUNT }, (_, i) =>
      document.querySelector(`.exhibition-products-swiper-promotion-products-swiper-container-{{ section.id }}-${i}`)
    );

    const bannerBoxes = document.querySelectorAll('.exhibition-products-swiper-{{ section.id }} .exhibition-products-swiper-banner-box');

    /**
     * 横向滑动指定tab至容器中间
     */
    function scrollTabIntoView(activeTab) {
      const tabCenter = activeTab.offsetLeft + activeTab.offsetWidth / 2;
      const scrollTo = tabCenter - tabContainer.clientWidth / 2;
      tabContainer.scrollTo({
        left: scrollTo,
        behavior: 'smooth',
      });
    }

    // 绑定tab点击事件
    tabs.forEach((tab, idx) => {
      tab.addEventListener('click', function () {
        // 1. 高亮当前tab并取消其它tab高亮
        tabs.forEach((t) => t.classList.remove('active'));
        tab.classList.add('active');

        // 2. 激活/隐藏对应swiper容器
        swiperContainers.forEach((slide, sidx) => {
          if (slide) slide.classList.toggle('active', sidx === idx);
        });

        // 3. banner同步高亮
        bannerBoxes.forEach((bannerBox, i) => {
          bannerBox.classList.toggle('active', i === idx);
        });

        // 4. 重新初始化swiper，保证每次只保留当前激活的swiper
        initAllSwipers();

        // 5. 滚动tab到中间
        scrollTabIntoView(tab);
      });
    });

    // 初始化时，设置第一个tab高亮并同步更新按钮状态
    if (tabs.length > 0) {
      tabs[0].classList.add('active');
      updateNavigationButtons(0);
    }
  });
</script>

