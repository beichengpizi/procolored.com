<script>
  const progressBar = document.getElementById('progressBar');
  const progressPoints = document.querySelectorAll('.progress-point');
  const timelineContainer = document.querySelector('.timeline-container');
  const startDateUTC = '{{ section.settings.phase_1_completion_date }}';
  const firstPhaseEndUTC = '{{ section.settings.phase_2_completion_date }}';
  const secondPhaseEndUTC = '{{ section.settings.phase_3_completion_date }}';
  function formatUtcTime(v) {
    let date = new Date(v);
    return (
      date.getFullYear() +
      '/' +
      (date.getMonth() + 1) +
      '/' +
      (date.getDate() < 10 ? '0' + date.getDate() : date.getDate()) +
      ' ' +
      (date.getHours() < 10 ? '0' + date.getHours() : date.getHours()) +
      ':' +
      (date.getMinutes() < 10 ? '0' + date.getMinutes() : date.getMinutes()) +
      ':' +
      (date.getSeconds() < 10 ? '0' + date.getSeconds() : date.getSeconds())
    );
  }
  // 创建 Intersection Observer
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // 添加动画类
          progressBar.classList.add('animate');
          calculateProgress();
          observer.unobserve(entry.target);
        }
      });
    },
    {
      threshold: 0.2,
    }
  );

  observer.observe(timelineContainer);
  // 计算进度（根据当前日期按比例计算）
  function calculateProgress() {
    const now = formatUtcTime(new Date().toUTCString());

    const startDate = formatUtcTime(startDateUTC);
    const firstPhaseEnd = formatUtcTime(firstPhaseEndUTC);
    const secondPhaseEnd = formatUtcTime(secondPhaseEndUTC);
    console.log('now==', now);
    console.log('startDate==', startDate);
    console.log('firstPhaseEnd==', firstPhaseEnd);
    // 将时间差转换为天数，使用Math.floor确保得到整数天数
    const getDaysDifference = (date1, date2) => {
      const d1 = new Date(date1);
      const d2 = new Date(date2);
      // 计算两个日期之间的天数差
      // 用毫秒差除以一天的毫秒数(1000*60*60*24)
      // 使用Math.ceil向上取整，确保即使不足一天也算作一天
      return Math.ceil((d2 - d1) / (1000 * 60 * 60 * 24));
    };

    let progress = 0;
    // 如果当前日期小于开始日期，进度为0
    if (now < startDate) {
      progress = 0;
    }
    // 第一阶段 (0-50%)
    else if (now >= startDate && now <= firstPhaseEnd) {
      const totalDays = getDaysDifference(startDate, firstPhaseEnd);
      const passedDays = getDaysDifference(startDate, now);
      console.log('totalDays==', totalDays);
      console.log('passedDays==', passedDays);
      progress = (passedDays / totalDays) * 50;
    }
    // 第二阶段 (50-100%)
    else if (now > firstPhaseEnd && now <= secondPhaseEnd) {
      const totalDays = getDaysDifference(firstPhaseEnd, secondPhaseEnd);
      const passedDays = getDaysDifference(firstPhaseEnd, now);
      progress = 50 + (passedDays / totalDays) * 50;
    }
    // 超过结束日期
    else if (now > secondPhaseEnd) {
      progress = 100;
    }

    // 确保进度在0-100之间
    progress = Math.max(0, Math.min(100, progress));
    console.log('进度==', progress);

    // 判断是否为移动端
    const isMobile = window.innerWidth <= 768;

    // 根据设备类型设置不同的transform-origin和transform
    if (isMobile) {
      console.log('移动端');
      progressBar.style.transformOrigin = 'top';
      progressBar.style.transform = `scaleY(${progress / 100})`;
      // 设置进度条宽度
      // progressBar.style.width = `100%`;
      progressBar.style.height = `${progress}%`;
    } else {
      console.log('pc端');
      // 设置进度条宽度
      progressBar.style.width = `${progress}%`;
      progressBar.style.transformOrigin = 'left';
      progressBar.style.transform = `scaleX(${progress / 100})`;
    }

    // 更新点的状态
    progressPoints.forEach((point, index) => {
      if (index * 50 <= progress) {
        point.classList.add('completed');
      } else {
        point.classList.remove('completed');
      }
    });
  }

  // 初始化进度
  calculateProgress();

  // 监听窗口大小变化
  window.addEventListener('resize', calculateProgress);
</script>
