        prevEl: '.swiper-button-prev-{{section.id}}',
      },
      {% comment %} autoplay: {
        delay: delayTime,
        disableOnInteraction: false,
      },  {% endcomment %}
      on: {
   
      },
      breakpoints: {
        //当宽度小于等于1024时显示
        1024: {
          slidesPerView: 2.2,
          spaceBetween: 16,
        },
          //当宽度小于等于768时显示
          768: {
           
