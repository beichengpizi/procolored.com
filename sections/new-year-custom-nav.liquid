<nav class="nav-{{section.id}}">
  <div class="nav-container">
    {%- for block in section.blocks -%}
      <a class="{{ section.settings.font_family }} " href="#custom-nav-{{- block.settings.section_id -}}">
        {{- block.settings.title -}}
      </a>
    {% endfor %}
  </div>
</nav>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const nav = document.querySelector('.nav-{{section.id}}');
    const navContainer = document.querySelector('.nav-{{section.id}} .nav-container');
    let navLinks = document.querySelectorAll('.nav-{{section.id}} .nav-container a');

    // æ£€æŸ¥å½“å‰æ»šåŠ¨ä½ç½®å¹¶æ›´æ–°å¯¼èˆªé“¾æ¥çŠ¶æ€
    function updateNavLinks() {
        // 1ï¸âƒ£ æ”¶é›†å¯¼èˆªä¸­çœŸå®å­˜åœ¨çš„é”šç‚¹ IDï¼ˆç™½åå•ï¼‰
        const validSectionIds = Array.from(navLinks).map(link =>
            link.getAttribute('href').slice(1)
        );

        // 2ï¸âƒ£ åªä¿ç•™åœ¨ç™½åå•ä¸­çš„ section
        const sections = Array.from(
            document.querySelectorAll('div[id^="custom-nav-"], section[id^="custom-nav-"]')
        ).filter(section =>
            validSectionIds.includes(section.id)
        );

        let currentSection = '';

        sections.forEach((section) => {
            const rect = section.getBoundingClientRect();
            const top = rect.top + window.scrollY;
            const height = rect.height || 1;

            if (window.scrollY >= top - height / 3) {
            currentSection = section.id;
            }
        });

        navLinks.forEach((link) => {
            const isActive = link.getAttribute('href').slice(1) === currentSection;
            link.classList.toggle('active', isActive);

            if (isActive) {
            scrollNavToActiveLink(link);
            }
        });
    }


    // æ»šåŠ¨å¯¼èˆªèœå•åˆ°å½“å‰æ¿€æ´»çš„é“¾æ¥
    function scrollNavToActiveLink(activeLink) {
      const activeLinkRect = activeLink.getBoundingClientRect();
      const navContainerRect = navContainer.getBoundingClientRect();

      if (activeLinkRect.left < navContainerRect.left || activeLinkRect.right > navContainerRect.right) {
        navContainer.scrollLeft += activeLinkRect.left - navContainerRect.left;
      }
    }

    const navTop = nav.offsetTop;

    // ç›‘å¬æ»šåŠ¨äº‹ä»¶
    window.addEventListener('scroll', () => {
      if (window.scrollY >= navTop) {
        nav.classList.add('sticky');
      } else {
        nav.classList.remove('sticky');
      }
      updateNavLinks();
    });

    // åˆå§‹åŒ–
    updateNavLinks();

    // æ£€æŸ¥URLä¸­çš„é”šç‚¹å¹¶æ»šåŠ¨åˆ°ç›¸åº”ä½ç½®
    function scrollToAnchor() {
      const hash = window.location.hash;
      if (hash) {
        const targetElement = document.querySelector(hash);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: 'smooth' });
          updateNavLinks();
        }
      }
    }

    // é¡µé¢åŠ è½½æ—¶è°ƒç”¨
    scrollToAnchor();

    // ç›‘å¬hashå˜åŒ–
    window.addEventListener('hashchange', scrollToAnchor);

    // ğŸ”§ å¯é€‰ï¼šç›‘å¬ DOM å˜åŒ–ï¼Œè‡ªåŠ¨æ›´æ–° navLinks
    const observer = new MutationObserver(() => {
      navLinks = document.querySelectorAll('.nav-{{section.id}} .nav-container a');
    });
    observer.observe(document.body, { childList: true, subtree: true });
  });
</script>

