    white-space: nowrap; /* é˜²æ­¢æ¢è¡Œ */
    margin-right: 20px; /* é—´è· */
  }
  .nav-{{section.id}} .nav-container a::after {
    content: '';
    position: absolute;
    bottom: -4px;
