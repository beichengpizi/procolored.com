<style>
    .faqs-wrapper {
      max-width: 980px;
      margin: 0 auto;
      padding-top: {{ section.settings.faqs_padding_top }}px;
      padding-bottom: {{ section.settings.faqs_padding_bottom }}px;
    }
    .faqs-title h3.faq-title {
      text-align: center;
      margin: 0;
      font-size: 48px;
      line-height: 52px;
    }
    .faqs-content {
      margin-top: 60px;
      padding: 120px 0;
      background-color: #fff;
      border-radius: 20px;
    }
    .faqs-content .faq:first-child .q-box{
      padding-top: 0;
    }
    .faqs-content .faq:last-child .a-box{
      padding-bottom: 0;
    }
    .faq .q-box{
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      padding: 24px 42px 24px 80px;
      border-bottom: 1px solid #ccc;
    }
    .faq .q-text{
      color: #000;
      font-weight: bold;
      font-size: 24px;
      line-height: 29px;
    }
    .faq .a-text{
      font-size: 18px;
      line-height: 22px;
      color: #868686;
    }
    .faq .q-icon{
      margin-left: 5px;
    }
    .q-icon .icon{
      display: flex;
    }
    .faq .q-box.q-active .q-icon {
      transform: rotate(90deg);
  }
    .faq .a-box{
      padding: 24px 80px;
      display: none;
    }
    @media screen and (max-width:1028px) {
      .faqs-wrapper{
        padding-left: 24px;
        padding-right: 24px;
      }
      .faqs-content{
        margin-top: 40px;
        padding: 80px 0;
        border-radius: 10px;
      }
      .faqs-title h3.faq-title{
        font-size: 32px;
        line-height: 36px;
      }
      .faq .q-box{
        padding: 30px 10px 30px 20px;
      }
      .faq .a-box{
        padding: 30px 20px;
      }
      .faq .q-text{
        font-size: 18px;
        line-height: 22px;
      }
      .faq .a-text{
        font-size: 16px;
        line-height: 20px;
      }
    }
    @media screen and (max-width:768px) {
      .faqs-title h3.faq-title{
        text-align: left;
      }
    }
</style>
<div class="section-faqs">
  <div class="faqs-wrapper">
    <div class="faqs-title">
      <h3 class="faq-title">{{ section.settings.faqs_title }}</h3>
    </div>
    <div class="faqs-content">
      {% for block in section.blocks %}
        <div class="faq">
          <div class="q-box">
            <div class="q-text">{{ block.settings.faq_q }}</div>
            <div class="q-icon">
              <div class="icon">
                <svg
                  t="1723558239418"
                  class="icon"
                  viewBox="0 0 1024 1024"
                  version="1.1"
                  xmlns="http://www.w3.org/2000/svg"
                  p-id="4248"
                  width="16"
                  height="16"
                >
                  <path d="M353.323071 246.407016L620.37222 510.637979l-265.320785 268.146133c-11.776208 11.775184-11.73425201 30.908964 0.091074 42.73429l0.001023 0c11.825326 11.82635 30.958082 11.867282 42.72815-2.930749L680.899758 535.559579c3.817955-4.273327 8.205892-9.321296 8.933463-12.045337 4.470825-11.112082 2.232854-24.76503301-6.710842-35.987632l-286.98213-286.98213c-11.875468-8.847505-31.096229-8.893554-42.922578 2.932796C341.393367 215.303624 341.439416 234.523361 353.323071 246.407016z" p-id="4249" fill="#000000"></path>
                </svg>
              </div>
            </div>
          </div>
          <div class="a-box">
            <div class="a-text">{{ block.settings.faq_a }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
  $(function () {
    $('.faqs-content .faq:first .q-box').addClass('q-active');
    $('.faqs-content .faq:first .a-box').show();
    $('.faq .q-box').click(function () {
      $(this).toggleClass('q-active').siblings('.a-box').slideToggle();
    });
  });
</script>
{% schema %}
{
  "name": "Section FAQs",
  "settings": [
    {
      "type": "text",
      "id": "faqs_title",
      "label": "Header",
      "default": "FAQs"
    },
    {
      "type": "range",
      "id": "faqs_padding_top",
      "min": 0,
      "max": 400,
      "step": 5,
      "unit": "px",
      "label": "上边距",
      "default": 40
    },
    {
      "type": "range",
      "id": "faqs_padding_bottom",
      "min": 0,
      "max": 400,
      "step": 5,
      "unit": "px",
      "label": "下边距",
      "default": 40
    }
  ],
  "blocks": [
    {
      "name": "FAQ",
      "type": "faq",
      "settings": [
        {
          "type": "textarea",
          "id": "faq_q",
          "label": "问题"
        },
        {
          "type": "richtext",
          "id": "faq_a",
          "label": "回答"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section FAQs",
      "blocks": [
        {
          "type": "faq"
        },
        {
          "type": "faq"
        },
        {
          "type": "faq"
        }
      ]
    }
  ]
}
{% endschema %}
