<style>
  .section-main {
    max-width: 1200px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 16px;
    margin: 0 auto;
    margin-bottom: 100px;
  }

  .sectionImage-text {
    background: #fff;
    border-radius: 20px;
  }

  .section-image {
    padding: 0 24px;
    width: 100%;
    aspect-ratio: 1;
    border-radius: 10px;
  }

  .section-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
  }

  .section-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 45px 29px;
  }

  .info-title h3 {
    font-size: 24px;
    margin: 0;
    padding: 0;
  }

  .info-content {
    text-align: center;
    font-size: 20px;
    line-height: 1.2;
  }

  @media (max-width:900px) {
    .section-main {
      grid-template-columns: 1fr 1fr;
      width: 100%;
      padding: 0 14px;
      gap: 15px;
      margin-bottom: 20px;
    }

    .info-title h3 {
      font-size: 16px;
    }

    .info-content {
      font-size: 14px;
    }

    .sectionImage-text {
      padding: 0 18px;
      border-radius: 10px;
    }

    .section-info {
      padding: 0 9px 12px;
    }
  }
</style>
<div class="section-main">
  {% for block in section.blocks %}
    {% if block.type == 'img-text' %}
      <div class="sectionImage-text">
        <div class="section-image">
          <img src="{{ block.settings.image_with_text_image|image_url }}" alt="">
        </div>
        <div class="section-info">
          <div class="info-title">
            <h3>{{ block.settings.footer_linklist_title }}</h3>
          </div>
          <div class="info-content">
            <span>
              {{ block.settings.home_welcome_message }}
            </span>
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>
{% schema %}
  {
    "name": "ourBrand-third",
    "settings": [],
    "blocks":[
      {
        "name":"img-text",
        "type":"img-text",
        "settings":[
          {
  "type": "text",
  "id": "footer_linklist_title",
  "label": "Heading",
  "default": "Quick links"
},{
  "type": "textarea",
  "id": "home_welcome_message",
  "label": "content",
  "default": "Welcome to my shop!"
},{
  "type": "image_picker",
  "id": "image_with_text_image",
  "label": "Image"
}
        ]
      }
    ],
    "presets":[
      {
        "name":"ourBrand-third"
      }
    ]
  }
{% endschema %}
