<style>
  #shopify-section-{{ section.id }} .row {
  	max-width: 1200px;
  	padding: 0;
  }

  #shopify-section-{{ section.id }} .section-header {
  	justify-content: left;
  	padding-bottom: 48px;
    padding-top: 0;
  }

  #shopify-section-{{ section.id }} .section-header--title {
  	text-align: center;
  	color: #121212;
  	text-align: left;
  	font-size: 40px;
  	font-weight: 800;
  }

  #shopify-section-{{ section.id }} .section-header--description p {
  	color: #5D5D5D;
  	text-align: center;
  	font-size: 24px;
  }

  #shopify-section-{{ section.id }} .multicolumn-swiper-wrapper {
  	display: flex;
  	gap: 0;
    width: 100%;         /* üî• ÂøÖÈ°ª */
    box-sizing: border-box;
  }

  #shopify-section-{{ section.id }} .multicolumn__inner {
    display: flex;
    align-items: stretch;
    flex-direction: column;
  }

  #shopify-section-{{ section.id }} .multicolumn-swiper-wrapper {
    align-items: stretch;
  }


  #shopify-section-{{ section.id }} .multicolumn__column {
