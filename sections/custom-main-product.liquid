{%- liquid
  assign first_3d_model = product.media | where: 'media_type', 'model' | first
  assign thumbnail_position = section.settings.thumbnail_position
  assign media_aspect_ratio = section.settings.media_aspect_ratio

  assign image_index = -1

  assign display_captions = section.settings.display_captions
  assign hide_variants = section.settings.hide_variants
  assign featured_media = product.selected_or_first_available_variant.featured_media

  assign first_image = null
  assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src'

  assign sizes = '345x345,610x610,1220x1220'
  if media_aspect_ratio == 'adapt'
    assign sizes = '345x0,610x0,1220x0'
  elsif media_aspect_ratio == 'portrait'
    assign sizes = '345x430,640x765,1220x1525'
  elsif media_aspect_ratio == 'landscape'
    assign sizes = '345x255,610x450,1220x900'
  endif
-%}

<style>
  .product-grid-container-left-placeholder{
    min-height: 327px !important;
    width: 100%;
    background: linear-gradient(90deg, #f3f3f3 25%, #e1e1e1 50%, #f3f3f3 75%);
    background-size: 400% 100%;
    animation: placeholderShimmer 1.5s ease-in-out infinite;
  }
  #ProductInfo-{{ section.id }} custom-automatic-discount-reminder,product-recommendations custom-automatic-discount-reminder{
    border-radius: 18px;
    font-size: 14px;
    opacity: 0;
  }
  #ProductInfo-{{ section.id }} custom-automatic-discount-reminder{
    align-items: center !important;
  }
  #variant-selects-{{ section.id }}{
    opacity: 0;
  }
  @keyframes placeholderShimmer {
    0% {
      background-position: 100% 0;
    }
    100% {
      background-position: -100% 0;
    }
  }
  custom-automatic-discount-reminder{
    border-radius: 13px;
    font-size: 14px;

  }

  @media only screen and (min-width: 1068px) {
    .product-grid-container-left-placeholder{
      min-height: 628px !important;

    }
    .product-grid-container {
      display: grid;
      align-items: start;
      /* grid-gap: clamp(30px, 5%, 40px); */
      /* grid-template-columns: minmax(45%, 740px) clamp(360px, 45%, 500px); */
      grid-gap: clamp(30px, 5%, 108px);
      grid-template-columns: minmax(45%, 628px) clamp(360px, 45%, 452px);
    }
  }

  .product-gallery__tabs.show {
    display: flex;
    margin-top: 24px;
    align-items: center;
    justify-content: center;
  }



  .product-image-container {
    position: absolute !important;
    opacity: 0;
    visibility: collapse;
  }
  .product-image-container.show {
    position: relative !important;
    opacity: 1;
    visibility: visible;
  }
  .product-price-container .price .amount:not(html) {
    color: #da291c;
    /* font-size: calc(var(--font-heading-scale)* 1.4rem); */
    font-size: 26px;
  }

  @media (max-width: 768px) {
    custom-automatic-discount-reminder{
      border-radius: 13px;
      font-size: 12px;
    }
    #ProductInfo-{{ section.id }} custom-automatic-discount-reminder{
      align-items: start !important;
    }
    #ProductInfo-{{ section.id }} custom-automatic-discount-reminder .
    .product-price-container .price .amount:not(html) {
      font-size: 24px;
    }
  }

  .product-title-container .product-price-container .no-js-hidden {
    display: flex;
  }

  .product-title-container .product-price-container span.discount_amount.color-,
  .product-price span.discount_amount,
  .product-price.duplicate span.discount_amount.color-:not(html) {
    background: #f7e7e3;
    border-radius: 16px;
    padding: 4px 10px;
    color: #da291c;
    line-height: 20px;
    height: 25px;
    font-size: 14px;
    display: inline-flex;
    align-items: center;
    font-weight: normal;
    /* height: auto; */
  }

  @media (max-width: 768px) {
    .product-title-container .product-price-container span.discount_amount.color-,
    .product-price span.discount_amount,
    .product-price.duplicate span.discount_amount.color-:not(html) {
      font-size: 12px;
      padding: 0 8px;
    }
  }

  .product-price .product-price {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .price ins .amount:not(html) {
    font-size: 24px;
  }

  .price span.del {
    font-size: 14px;
    text-decoration: line-through;
    font-weight: normal;
    margin-left: 10px;
  }

  @media (max-width: 768px) {
    .price span.del {
      font-size: 12px;
    }

    .price ins .amount:not(html) {
      font-size: 18px;
    }
  }

  .side-panel-links .text-button {
    text-decoration: none;
  }

  .flickity-nav {
    background: rgba(0, 0, 0, 0.4) !important;
    opacity: 0.2 !important;
  }

  .flickity-nav:hover {
    background: rgba(0, 0, 0, 0.4) !important;
    opacity: 0.6 !important;
  }

  .flickity-nav svg {
    fill: rgba(255, 255, 255, 0.2);
  }

  .flickity-nav:hover svg {
    fill: white !important;
  }
  .flickity-nav.flickity-next {
    transform: rotate(180deg);
  }
  .product-image-container.product-image-container-video .flickity-viewport {
    border-radius: 0 !important;
  }

  .side-panel,
  .thb-full-menu .sub-menu,
  .custom-select--list,
  .flickity-nav,
  .has-shadow--true {
    box-shadow: none !important;
  }
  .add_to_cart_holder--multi {
