        display: flex;
        border-radius: 10px;
        overflow: hidden;

    }

    .x-one-brand-endorsement-content2-img.mb,
    .x-one-brand-endorsement-content3-img.mb {
        display: none;

    }

    .x-one-brand-endorsement-content2-desc,
    .x-one-brand-endorsement-content3-desc {
        flex: none;
        color: #898A8E;
        font-size: 14px;
        font-weight: 400;
        line-height: 130%;

    }

    .x-one-brand-endorsement-content2-desc span,
    .x-one-brand-endorsement-content3-desc span {
        font-size: 14px;
        font-weight: 700;
        line-height: 130%;

    }
    }
