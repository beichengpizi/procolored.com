<style>
  .x-one-brand-endorsement-{{ section.id }}{
    background: #000;
    padding-top:{{ section.settings.padding_top }}px;
    padding-bottom:{{ section.settings.padding_bottom }}px;
  }
  .x-one-brand-endorsement {
    background: #000;
    position: relative;

  }

  .x-one-brand-endorsement-img {
    position: absolute;
    top: 0;
    left: 50%;
    width: 100%;
    height: 700px;
    max-width: 1920px;
    min-height: 400px;
    object-fit: contain;
    margin: 0 auto;
    transform: translateX(-50%);

  }

  .x-one-brand-endorsement-img.pc {
    display: flex;

  }

  .x-one-brand-endorsement-img.mb {
    display: none;

  }

  .x-one-brand-endorsement-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: start;
    margin: 0 auto;
    max-width: 1200px;
    gap: 25px;
    padding-top: 60px;


  }

  .x-one-brand-endorsement-content-title {
    max-width: 722px;
    color: #FF8F1C;
    font-size: 58px;
    font-style: normal;
    font-weight: 800;
    line-height: 120%;
  }

  .x-one-brand-endorsement-content-desc {
    max-width: 680px;
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 25px;


  }

  .x-one-brand-endorsement-content-desc-text {

    color: #898A8E;
    font-size: 21px;
    font-weight: 400;
    line-height: 150%;


  }

  .x-one-brand-endorsement-content-desc-text span {
    color: #FFf;
    font-size: 21px;
    font-weight: 700;
    line-height: 150%;
  }

  .x-one-brand-endorsement-content2,
  .x-one-brand-endorsement-content3 {
    position: relative;
    display: flex;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    gap: 40px;
    margin-top: 65px;

  }

  .x-one-brand-endorsement-content3 {
    flex-direction: row-reverse;
    margin-top: 40px;
  }

  .x-one-brand-endorsement-content2-img,
  .x-one-brand-endorsement-content3-img {
    width: 58.33%;
  }

  .x-one-brand-endorsement-content2-img img,
  .x-one-brand-endorsement-content3-img img {
    width: 100%;
    max-width: 100%;


  }

  .x-one-brand-endorsement-content2-img.pc,
  .x-one-brand-endorsement-content3-img.pc {
    display: flex;
    border-radius: 20px;
    overflow: hidden;

  }

  .x-one-brand-endorsement-content2-img.mb,
  .x-one-brand-endorsement-content3-img.mb {
    display: none;

  }

  .x-one-brand-endorsement-content2-desc,
  .x-one-brand-endorsement-content3-desc {
    flex: 1;
    color: #898A8E;
    font-size: 21px;
    font-weight: 400;
    line-height: 150%;

  }

  .x-one-brand-endorsement-content2-desc span,
  .x-one-brand-endorsement-content3-desc span {
    color: #fff;
    font-size: 21px;
    font-weight: 700;
    line-height: 150%;

  }
    @media screen and (max-width: 768px) {
      .x-one-brand-endorsement-{{ section.id }}{
        padding-top:{{ section.settings.padding_top_mobile }}px;
        padding-bottom:{{ section.settings.padding_bottom_mobile }}px;
      }
      .x-one-brand-endorsement {
        position: relative;

    }

    .x-one-brand-endorsement-img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 664px;
        max-width: 100%;
        min-height: auto;
        object-fit: contain;
        margin: 0 auto;
        transform: translateX(0);

    }

    .x-one-brand-endorsement-img.pc {
        display: none;

    }

    .x-one-brand-endorsement-img.mb {
        display: flex;

    }

    .x-one-brand-endorsement-content {

        max-width: 100%;
        gap: 16px;
        padding-top: 0px;
        padding-left: 24px;
        padding-right: 24px;


    }

    .x-one-brand-endorsement-content-title {
        max-width: 100%;
        font-size: 26px;
        font-weight: 800;
        line-height: 130%;
    }

    .x-one-brand-endorsement-content-desc {
        max-width: 100%;
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 15px;


    }

    .x-one-brand-endorsement-content-desc-text {


        font-size: 14px;
        font-weight: 400;
        line-height: 130%;


    }

    .x-one-brand-endorsement-content-desc-text span {
        font-size: 14px;
