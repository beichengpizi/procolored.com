        position: relative;
        display: flex;
        flex-direction: column-reverse;
        align-items: center;
        max-width: 100%;
        margin: 0 auto;
        gap: 24px;
        margin-top: 236px;
        padding: 0 24px;

    }

    .x-one-brand-endorsement-content3 {
        flex-direction: column-reverse;
        margin-top: 40px;
    }

    .x-one-brand-endorsement-content2-img,
    .x-one-brand-endorsement-content3-img {
