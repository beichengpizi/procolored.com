<style>
  html,
  body {
    margin: 0;
    padding: 0;
  }

  section,
  div,
  span {
    box-sizing: border-box;
  }

  .index-brand-endorsement-wrapper {
    background: #fbfbfb;
  }

  .index-brand-endorsement-container {
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 80px;
    padding-bottom: 80px;
  }

  .index-brand-endorsement-content {
    margin-bottom: 40px;
  }

  .index-brand-endorsement-content-title {

    text-align: center;
    color: #000;
    font-size: 40px;
    font-weight: 800;
    line-height: 1.22;
    /* 122% */
  }

  .index-brand-endorsement-content-title-svg {
    display: inline-block;
    margin-left: 18px;
    margin-right: 18px;
    width: 164px;
    height: 42px;
    vertical-align: bottom;
  }

  .index-brand-endorsement-swiper-container-{{ section.id }} {
    position: relative;
    overflow: hidden;
  }

  /* 让每个slide宽度自适应内容 */
