<script>
  // 修复 .excellent-work-display-swiper-container 无缝轮播在轮播完后会停一下的问题
  // 方案：设置autoplay.delay为0，freeMode为true，speed为合适的较大值，并确保loop和linear过渡
  // 另外，需确保swiper-wrapper的transition-timing-function为linear
  // 下面是推荐的初始化方式

  let IndexBrandEndorsementSwiper = null;
  function initExcellentWorkSwiper() {
    if (IndexBrandEndorsementSwiper) {
      IndexBrandEndorsementSwiper.destroy(true, true);
    }
    IndexBrandEndorsementSwiper = new Swiper('.index-brand-endorsement-swiper-container-{{ section.id }}', {
      loop: true,
      slidesPerView: 'auto', // 宽度自适应
      loopedSlides: 10,
      spaceBetween: 80, // slide间隔80px
      observer: true,
      observeParents: true,
      freeMode: true,
      speed: 12000, // 速度越大，滚动越慢
      allowTouchMove: false,
      autoplay: {
        delay: 0, // 关键：设置为0实现无缝连续滚动
        disableOnInteraction: false,
        stopOnLastSlide: false,
        waitForTransition: true, // 关键：设置为false，防止每次loop时等待过渡
      },
      on: {
        // 关键：每次loopFix时强制autoplay继续，防止停顿
        loopFix: function () {
          if (this.autoplay && this.autoplay.running) {
            this.autoplay.start();
          }
        },
      },
      breakpoints: {
        768: {
          spaceBetween: 34, // 移动端slide间隔24px
        },
      },
    });

    // 强制swiper-wrapper为linear过渡，防止因样式被覆盖导致非线性
    $('.index-brand-endorsement-swiper-container-{{ section.id }} .swiper-wrapper').css(
      'transition-timing-function',
      'linear'
    );
  }

  // 页面初次加载时初始化
  initExcellentWorkSwiper();
</script>
