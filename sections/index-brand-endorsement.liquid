    display: flex;
    align-items: stretch;
  }
  .index-brand-endorsement-swiper-container-{{ section.id }} .swiper-slide {
    width: auto !important;
    flex-shrink: 0;
    margin-right: 80px;
    /* 最后一个slide的margin-right由swiper自动处理 */
    display: flex;
    align-items: center;
    height: auto;
  }

  .index-brand-endorsement-swiper-slide-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .index-brand-endorsement-swiper-slide-content-subtitle {
    color: #6d6d6d;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.38;
    text-align: left;
    /* 138% */
  }

  .index-brand-endorsement-swiper-slide-content-title {
    color: #000;
    text-align: center;
    font-size: 26px;
    font-weight: 600;
    line-height: 1.3;
    text-align: left;
    width: max-content;
    /* 130% */
  }

  .index-brand-endorsement-swiper-container-{{ section.id }} .swiper-wrapper {
    transition-timing-function: linear !important;
    -webkit-transition-timing-function: linear !important;
    -moz-transition-timing-function: linear !important;
    -ms-transition-timing-function: linear !important;
    -o-transition-timing-function: linear !important;
  }

  @media screen and (max-width: 768px) {
    .index-brand-endorsement-container {
      padding-top: 50px;
      padding-bottom: 50px;
    }

    .index-brand-endorsement-content {
      margin-bottom: 20px;
    }

    .index-brand-endorsement-content-title {
      font-size: 24px;
      padding: 0 24px;
      text-align: left;
      /* 122% */
    }

    .index-brand-endorsement-content-title-svg {
      width: 106px;
      height: 30px;
      margin-left: 9px;
      margin-right: 9px;
    }

    .index-brand-endorsement-swiper-container-{{ section.id }} {
      position: relative;
      overflow: hidden;
    }

