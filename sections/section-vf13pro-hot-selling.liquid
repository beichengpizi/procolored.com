                    </product-form>
                  </div>
              </div>
              <a class="btn-r" href="{{ product.url }}">Learn VF 13 Pro &gt;</a>
            </div>
          </div>
          <div class="r-sale">
            <img src="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/m07187.png" alt="">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('productVideo').play();
  document.getElementById("productVideo").muted = true;
  document.getElementById("productVideo").autoplay = true;
</script>

{% schema %}
{
  "name": "VF13Pro Hot Selling",
  "settings": [
    {
      "type": "product",
      "id": "hs_product",
      "label": "产品选择"
    },
    {
      "type": "video",
      "id": "product_video",
      "label": "视频选择"
    }
  ],
