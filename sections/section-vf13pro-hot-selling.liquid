{% liquid
  assign product = section.settings.hs_product
  assign product_form_id = 'product-form-' | append: section.id
%}
<div class="hot-selling">
  <div class="hs-wrapper">
    <div class="hs-title">
      <div class="title-img-l">
        <picture>
          <source
            media="(min-width: 769px)"
            srcset="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/p07185.png"
          >
          <source
            media="(max-width: 768px)"
            srcset="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/m07188.png"
          >
          <img src="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/p07185.png">
        </picture>
      </div>
      <div class="title">Hot Selling</div>
      <div class="title-img-r">
        <picture>
          <source
            media="(min-width: 769px)"
            srcset="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/p07183.png"
          >
          <source
            media="(max-width: 768px)"
            srcset="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/m07186.png"
          >
          <img src="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/p07183.png" alt="">
        </picture>
      </div>
    </div>
    <div class="hs-product">
      <div class="product-box">
        <div class="box-l">
          <div class="l-video">
            {{ section.settings.product_video | video_tag: autoplay: true, loop: true, controls: true, muted: true }}
          </div>
        </div>
        <div class="box-r">
          <div class="r-content">
            <img class="r-img" src="{{ product.featured_image | image_url: width: master }}" alt="">
            <p class="r-title">{{ product.title }}</p>
            <div class="r-price">
              <span class="new-price">$5399</span>
              <span class="old-price">$5999</span>
            </div>
            <div class="btn-info">
              <div class="btn-l">
