<script>
// 监听页面DOM加载，初始化swiper与tab交互
document.addEventListener('DOMContentLoaded', function () {
// swiper实例变量定义，改为动态数量以便后续扩展（此处写3以兼容原结构）
const SWIPER_COUNT = {{ blocks_count | default: 0 }};
let productCount = 0;
if (SWIPER_COUNT == 0) { 
  return;
}
let swipers = Array(SWIPER_COUNT).fill(null);

/**
* 更新当前激活Swiper对应的左右导航按钮状态
*/
function updateNavigationButtons(activeIdx = null) {
swipers.forEach((swiper, i) => {
  const prevBtn = document.getElementById(`valentines-day-swiper-promotion-prevButton-{{ section.id }}-${i}`);
  const nextBtn = document.getElementById(`valentines-day-swiper-promotion-nextButton-{{ section.id }}-${i}`);
  if (swiper && prevBtn && nextBtn) {
    prevBtn.disabled = swiper.isBeginning;
    nextBtn.disabled = swiper.isEnd;
    // 只高亮当前激活swiper的按钮，其它不变
    if (activeIdx !== null) {
      prevBtn.classList.toggle('active', i === activeIdx);
      nextBtn.classList.toggle('active', i === activeIdx);
    }
  }
});
}
  let slidesPerView = 'auto';
  let slidesPerView1600 = 'auto';
  let slidesPerView1400 = 'auto';
  let slidesPerView1200 = 'auto';
  let slidesPerView768 = 'auto';
  let simulateTouch = true;
  let allowTouchMove = true;
  
  const section_max_width = '{{ section.settings.section_max_width }}';
  const product_num = {{ section.settings.product_num | minus: 0  | default:0 }};

/**
* 初始化所有swiper容器
* 每次切换tab会重新销毁并新建对应swiper，确保同步
*/
function initAllSwipers() {
// 先销毁已存在的swiper实例，避免内存泄漏与事件绑定重复
swipers.forEach((swiper) => {
  if (swiper) swiper.destroy(true, true);
});

// 通用Swiper参数
{% comment %} 禁止鼠标左右滑动，移动端允许 {% endcomment %}
const baseConfig = (idx,slidesPerView,slidesPerView1600,slidesPerView1400,slidesPerView1200,simulateTouch,allowTouchMove) => ({
  slidesPerView: slidesPerView,

  spaceBetween: {{ section.settings.card_gap | minus: 0}},
  navigation: {
    nextEl: `#valentines-day-swiper-promotion-nextButton-{{ section.id }}-${idx}`,
    prevEl: `#valentines-day-swiper-promotion-prevButton-{{ section.id }}-${idx}`,
  },
  scrollbar: {
    el: `.swiper-scrollbar-{{ section.id }}-${idx}`,
    hide: false,
  },
 
  loopedSlides: 10, // 解决循环时边界滑动问题
  observer: true,
  observeParents: true,
  // 禁止PC端鼠标拖动和滑动，仅允许移动端触摸滑动
  
   simulateTouch: simulateTouch,
  allowTouchMove:  allowTouchMove,  
  // 事件绑定延迟到下方
  breakpoints: {
    1600: {
        slidesPerView: slidesPerView1600,
        spaceBetween: {{ section.settings.card_gap_mobile | minus: 0 }},
      
     
      },
      1400: {
          slidesPerView: slidesPerView1400,
          spaceBetween: {{ section.settings.card_gap_mobile | minus: 0 }},
        

        },
    1200: {
      slidesPerView: slidesPerView1200,
      spaceBetween: {{ section.settings.card_gap_mobile | minus: 0 }},
      slidesOffsetBefore: 0, 
    
    },
    
    768: {
      slidesPerView: 1.4,
      spaceBetween: {{ section.settings.card_gap_mobile | minus: 0 }},
      simulateTouch: true,
      allowTouchMove:  true,
      slidesOffsetBefore: 16,  // 增加左侧偏移量
      slidesOffsetAfter: 16    // 增加右侧偏移量
    },
  },
});
let navButtons =null;
// 创建swiper实例，减少冗余
for (let i = 0; i < SWIPER_COUNT; i++) {
  const swiperContainer = document.querySelector(`.valentines-day-swiper-promotion-products-swiper-container-{{ section.id }}-${i}`);
  if (swiperContainer) {
     navButtons = swiperContainer.querySelector('.valentines-day-swiper-promotion-navigation-buttons');

  }
    productCount = swiperContainer ? swiperContainer.getAttribute('data-product-count') : null;
    if(product_num>=productCount && productCount>0 && section_max_width !== 'none' ){
        slidesPerView = product_num;
        slidesPerView1600 = product_num;
        slidesPerView1400 = product_num;
        slidesPerView1200 = product_num;
        simulateTouch = false;
        allowTouchMove = false;
        // PC端设置为0，移动端设置为1
        if (navButtons) {
          if (window.innerWidth <= 768) {
            navButtons.style.opacity = '1'; // 移动端
          } else {
            navButtons.style.opacity = '0'; // PC端
          }
        }
    }
    else if(productCount >product_num && productCount>0 && section_max_width !== 'none'){ 
        slidesPerView = product_num;
        slidesPerView1600 = product_num;
        slidesPerView1400 = product_num;
        slidesPerView1200 = product_num;
        simulateTouch = true;
        allowTouchMove = true;
    }
    else if(productCount >product_num && productCount>0){ 
        slidesPerView = product_num + 0.6;
        slidesPerView1600 = product_num - 1.6;
        slidesPerView1400 = product_num - 1.6;
        slidesPerView1200 = product_num - 1.6;
    }   else if(productCount < product_num && productCount>0){ 
        slidesPerView = productCount;
        slidesPerView1600 = productCount;
        slidesPerView1400 = productCount;
        slidesPerView1200 = productCount;
    }
  swipers[i] = new Swiper(swiperContainer, baseConfig(i,slidesPerView,slidesPerView1600,slidesPerView1400,slidesPerView1200,simulateTouch,allowTouchMove));
 

}

// 为每个swiper绑定slideChange与init事件
swipers.forEach((swiper, idx) => {
  if (swiper) {
    swiper.on('slideChange', () => updateNavigationButtons(idx));
    swiper.on('init', () => updateNavigationButtons(idx));
  }
});
}

// swiper初始化
initAllSwipers();

// ------- Tab切换逻辑 -------
// 获取tab容器
const tabContainer = document.getElementById('valentines-day-swiper-tabs-{{ section.id }}');
if (!tabContainer) return;

// 获取所有tab元素
const tabs = tabContainer.querySelectorAll('.valentines-day-swiper-tab');

// 按序获取swiper容器
const swiperContainers = Array.from({ length: SWIPER_COUNT }, (_, i) =>
document.querySelector(`.valentines-day-swiper-promotion-products-swiper-container-{{ section.id }}-${i}`)


);

const gridContainers = Array.from({ length: SWIPER_COUNT }, (_, i) =>
document.querySelector(`.valentines-day-swiper-grid-{{ section.id }}-${i}`)
);

const bannerBoxes = document.querySelectorAll('.valentines-day-swiper-{{ section.id }} .valentines-day-swiper-banner-box');

/**
* 横向滑动指定tab至容器中间
*/
function scrollTabIntoView(activeTab) {
const tabCenter = activeTab.offsetLeft + activeTab.offsetWidth / 2;
const scrollTo = tabCenter - tabContainer.clientWidth / 2;
tabContainer.scrollTo({
  left: scrollTo,
  behavior: 'smooth',
});
}

// 绑定tab点击事件
tabs.forEach((tab, idx) => {
tab.addEventListener('click', function () {
  // 1. 高亮当前tab并取消其它tab高亮
  tabs.forEach((t) => t.classList.remove('active'));
  tab.classList.add('active');

  // 2. 激活/隐藏对应swiper容器
  if(swiperContainers){
    swiperContainers.forEach((slide, sidx) => {
        if (slide) slide.classList.toggle('active', sidx === idx);
      });
    }
    if(gridContainers){
        gridContainers.forEach((grid, sidx) => {
            if (grid) grid.classList.toggle('active', sidx === idx);
          });
        }

  // 3. banner同步高亮
  bannerBoxes.forEach((bannerBox, i) => {
    bannerBox.classList.toggle('active', i === idx);
  });

  // 4. 重新初始化swiper，保证每次只保留当前激活的swiper
  initAllSwipers();

  // 5. 滚动tab到中间
  scrollTabIntoView(tab);
});
});

// 初始化时，设置第一个tab高亮并同步更新按钮状态
if (tabs.length > 0) {
tabs[0].classList.add('active');
updateNavigationButtons(0);
}
});
</script>

