<!-- 产品对比表格模块 -->
<div class="comparison-table-wrapper-{{section.id}}">
  <div class="custom-title-wrap">
    {% if section.settings.title != empty %}
      <div
        class="custom-title  desktopShow {{ section.settings.title_size }}"
      >
        {{ section.settings.title }}
      </div>
      {% if section.settings.title_mobile != empty %}
        <div
          class="custom-title  mobileShow {{ section.settings.title_size }}"
        >
          {{ section.settings.title_mobile }}
        </div>
      {% else %}
        <div
          class="custom-title  mobileShow {{ section.settings.title_size }}"
        >
          {{ section.settings.title }}
        </div>
      {% endif %}
    {% endif %}
    {% if section.settings.subtitle != empty %}
      <div
        class="custom-subtitle  desktopShow {{ section.settings.subtitle_size }} custom-font-regular"
      >
        {{ section.settings.subtitle }}
      </div>
      {% if section.settings.subtitle_mobile != empty %}
        <div
          class="custom-subtitle  mobileShow {{ section.settings.subtitle_size }} custom-font-regular"
        >
          {{ section.settings.subtitle_mobile }}
        </div>
      {% else %}
        <div
          class="custom-subtitle  mobileShow {{ section.settings.subtitle_size }} custom-font-regular"
        >
          {{ section.settings.subtitle }}
        </div>
      {% endif %}
    {% endif %}
  </div>
  {% assign show_buy_button = section.settings.show_Buy_Button %}
  {% if section.blocks.size > 0 %}
    <div class="comparison-table-container">
      <!-- 表格参数名称 -->
      <div class="comparison-table-item comparison-table-header-item">
        <div class="spec-label-column-product"></div>
        {% for block in section.blocks %}
          {% assign prod = block.settings.product %}
          {% assign variant_index = block.settings.product_variant_location | default: '0' | plus: 0 %}
          {% assign variant = prod.variants[variant_index] %}
          {% assign product_name = block.settings.title %}
          {% assign product_image = block.settings.product_image | default: prod.featured_image %}
          {% assign product_description = block.settings.description %}

          <div class="spec-column-product">
            {% assign image = product_image %}
            {% assign size = 100 | divided_by: product_count | round %}
            <img
              data-sizes="{{ size }}vw"
              width="{{ size }}vw"
              data-sizes="auto"
              data-srcset="
                {%- if image.width >= 375 -%}{{ image | image_url: width: 375 }} 375w,{%- endif -%}
                {%- if image.width >= 750 -%}{{ image | image_url: width: 750 }} 750w,{%- endif -%}
                {%- if image.width >= 1100 -%}{{ image | image_url: width: 1100 }} 1100w,{%- endif -%}
                {%- if image.width >= 1500 -%}{{ image | image_url: width: 1500 }} 1500w,{%- endif -%}
                {%- if image.width >= 1780 -%}{{ image | image_url: width: 1780 }} 1780w,{%- endif -%}
                {%- if image.width >= 2000 -%}{{ image | image_url: width: 2000 }} 2000w,{%- endif -%}
                {%- if image.width >= 3000 -%}{{ image | image_url: width: 3000 }} 3000w,{%- endif -%}
                {%- if image.width >= 3840 -%}{{ image | image_url: width: 3840 }} 3840w,{%- endif -%}

                {{ image | image_url }} {{ image.width }}w
              "
              data-src="{{ image | image_url: width: 800 }}"
              style="max-width:80%;width:100%;aspect-ratio:{{ image.aspect_ratio }}"
              class="printer-image lazyload"
              alt="{{ product_name }}"
            >
            {% if product_name != empty %}
              <div class="printer-title">{{ product_name }}</div>
            {% endif %}
            {% if product_description != empty %}
              <div class="printer-description">{{ product_description }}</div>
            {% endif %}
            {% if show_buy_button %}
              <div class="printer-button-wrapper">
                <product-card>
                  <div
                    class="printer-button-add-to-cart product-btn external-add-to-cart-button product-card--add-to-cart-button product-card--add-to-cart-button-simple button accent"
                    data-product-id="{{ variant.id }}"
                    tabindex="-1"
                    {% if variant.available == false %}
                      disabled
                    {% endif %}
                  >
                    {% render 'svg-icons' with 'thb-loading' %}
                    <span class="product-card--add-to-cart-text">
                      {%- if variant.available -%}
                        {%- if section.settings.buy_now_button_text != empty -%}
                          {{ section.settings.buy_now_button_text }}
                        {%- else -%}
                          {{ 'products.product.buy_now' | t }}
                        {%- endif -%}
                      {%- else -%}
                        {{- 'products.product.sold_out' | t -}}
                      {%- endif -%}
                    </span>
                  </div>
                </product-card>
              </div>
              <a class="printer-learn-more" href="{{ variant.url }}" target="_blank">{{ 'general.learn_more' | t }}</a>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <div class="comparison-table-item">
        <div class="spec-label">{{ 'products.product.parameter.printer_head' | t }}</div>
        {% for block in section.blocks %}
          {% assign printer_head = block.settings.product.metafields.custom.Printer_head.value %}
          <div class="spec-column">
            <div class="spec-label-mobile {% if forloop.first %}first{% endif %}">
              {{ 'products.product.parameter.printer_head' | t }}
            </div>
            <div>{{ printer_head }}</div>
          </div>
        {% endfor %}
      </div>
      <div class="comparison-table-item">
        <div class="spec-label">{{ 'products.product.parameter.printer_config' | t }}</div>
        {% for block in section.blocks %}
          {% assign printer_config = block.settings.product.metafields.custom.printer_config.value %}
          <div class="spec-column">
            <div class="spec-label-mobile {% if forloop.first %}first{% endif %}">
              {{ 'products.product.parameter.printer_config' | t }}
            </div>
            <div>{{ printer_config }}</div>
          </div>
        {% endfor %}
      </div>
      <div class="comparison-table-item">
        <div class="spec-label">{{ 'products.product.parameter.print_accuracy' | t }}</div>
        {% for block in section.blocks %}
          {% assign print_accuracy_full = block.settings.product.metafields.custom.print_accuracy.value %}
          {% if print_accuracy_full contains '(' and print_accuracy_full contains ')' %}
            {% assign dpi_part = print_accuracy_full | split: '(' | first | strip %}
            {% assign pass_part = print_accuracy_full | split: '(' | last | remove: ')' | strip %}
          {% else %}
            {% assign dpi_part = print_accuracy_full %}
            {% assign pass_part = '' %}
          {% endif %}
          {% assign print_accuracy = dpi_part %}
          {% assign print_pass = pass_part %}

          <div class="profit-section">
            <div class="spec-label-mobile {% if forloop.first %}first{% endif %}">
              {{ 'products.product.parameter.print_accuracy' | t }}
            </div>
            <div>
              <div class="profit-amount">{{ print_accuracy }}</div>
              {% if print_pass != '' %}
                <div class="work-day">({{ print_pass }})</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="comparison-table-item">
        <div class="spec-label">{{ 'products.product.parameter.print_size' | t }}</div>
        {% for block in section.blocks %}
          {% assign print_size = block.settings.product.metafields.custom.print_size.value %}
          <div class="spec-column">
            <div class="spec-label-mobile {% if forloop.first %}first{% endif %}">
              {{ 'products.product.parameter.print_size' | t }}
            </div>
            <div>{{ print_size }}</div>
          </div>
        {% endfor %}
      </div>
      <div class="comparison-table-item">
        <div class="spec-label">{{ 'products.product.parameter.print_speed' | t }}</div>
        {% for block in section.blocks %}
          {% assign print_speed = block.settings.product.metafields.custom.print_speed.value %}
          <div class="spec-column">
            <div class="spec-label-mobile {% if forloop.first %}first{% endif %}">
              {{ 'products.product.parameter.print_speed' | t }}
            </div>
            <div>{{ print_speed }}</div>
          </div>
        {% endfor %}
