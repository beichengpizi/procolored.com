{% assign product_count = section.blocks.size | plus: 1 %}
{% assign total_col_gap = section.settings.col_gap | times: section.blocks.size %}
{% assign table_row_width = section.settings.section_max_width | minus: total_col_gap %}
{% assign cel_width = table_row_width | divided_by: product_count | floor %}
<style>
    :root {
      /* Font sizes */
      --text-h0-n: 56px;
      --text-h0-sm-n: 48px;
      --text-h1-n: 40px;
      --text-h2-n: 30px;
      --text-h3-n: 26px;
      --text-h4-n: 24px;
      --text-h5-n: 20px;
      --text-h6-n: 16px;
      --text-xs-n: 12px;
      --text-sm-n: 14px;
      --text-base-n: 18px;
      --text-lg-n: 19px;
    }
    .text-xxs {
      font-size: 10px;
      line-height: 1.2;
    }

    .text-xs {
      font-size: var(--text-xs-n);
      line-height: 1.2;
    }

    .text-sm {
      font-size: var(--text-sm-n);
      line-height: 1.2;
    }

