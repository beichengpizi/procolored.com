    }
     /* 重置样式 start*/
     .comparison-table-wrapper-{{section.id}}  .h0 {
      font-size: var(--text-h0-n) ;
      line-height: 1;
      font-family: ItalianPlateNo2Expanded-Bold, sans-serif ;
    }
    .comparison-table-wrapper-{{section.id}}  .h0-sm {
      font-size: var(--text-h0-sm-n) ;
      line-height: 1;
      font-family: ItalianPlateNo2Expanded-Bold, sans-serif ;
    }


    .comparison-table-wrapper-{{section.id}}  h1,
    .comparison-table-wrapper-{{section.id}}  .h1,
    .comparison-table-wrapper-{{section.id}}  .prose h1:not(.h0, .h1, .h2, .h3, .h4, .h5, .h6) {
      font-size: var(--text-h1-n) ;
      line-height: 1.2;
      font-family: ItalianPlateNo2Expanded-Bold, sans-serif ;
    }

    .comparison-table-wrapper-{{section.id}}  h2,
    .comparison-table-wrapper-{{section.id}}  .h2,
    .comparison-table-wrapper-{{section.id}}  .prose h2:not(.h0, .h1, .h2, .h3, .h4, .h5, .h6) {
      font-size: var(--text-h2-n);
      line-height: 1.1;
      font-family: ItalianPlateNo2Expanded-Bold, sans-serif ;
    }

    .comparison-table-wrapper-{{section.id}}  h3,
    .comparison-table-wrapper-{{section.id}}  .h3,
    .comparison-table-wrapper-{{section.id}}  .prose h3:not(.h0, .h1, .h2, .h3, .h4, .h5, .h6) {
      font-size: var(--text-h3-n) ;
      line-height: 1.2;
    }

    .comparison-table-wrapper-{{section.id}}  h4,
    .comparison-table-wrapper-{{section.id}}  .h4,
    .comparison-table-wrapper-{{section.id}}  .prose h4:not(.h0, .h1, .h2, .h3, .h4, .h5, .h6) {
      font-size: var(--text-h4-n) ;
      line-height: 1.2;
    }

    .comparison-table-wrapper-{{section.id}}  h5,
    .comparison-table-wrapper-{{section.id}}  .h5,
    .comparison-table-wrapper-{{section.id}}  .prose h5:not(.h0, .h1, .h2, .h3, .h4, .h5, .h6) {
      font-size: var(--text-h5-n) ;
      line-height: 1.2;
    }

    .comparison-table-wrapper-{{section.id}}  h6,
    .comparison-table-wrapper-{{section.id}}  .h6,
    .comparison-table-wrapper-{{section.id}}  .prose h6:not(.h0, .h1, .h2, .h3, .h4, .h5, .h6) {
      font-size: var(--text-h6-n) ;
      line-height: 1.2;
    }
    /* 重置样式 end*/
    /* 参数表格模块 */
    .comparison-table-wrapper-{{section.id}} {
        background-color: {{section.settings.bgColor}};
        padding: {{ section.settings.padding_top }}px 24px {{ section.settings.padding_bottom }}px 24px;
      }
      .custom-title-wrap{
        {% if section.settings.section_max_width != 'none' %}
            max-width: {{ section.settings.section_max_width }}px;
            margin: 0 auto;
          {% endif %}

    }
  .comparison-table-wrapper-{{section.id}}  .comparison-table-container {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: repeat(9, auto);
        {% if section.settings.section_max_width != 'none' %}
            max-width: {{ section.settings.section_max_width }}px;
            margin: 0 auto;
          {% endif %}

      }
      .comparison-table-wrapper-{{section.id}} .custom-title-wrap{
        text-align: {{section.settings.title_text_alignment}};
        display: flex;
        flex-direction: column;
        align-items: {{section.settings.title_text_alignment}};
      }
     .comparison-table-wrapper-{{section.id}}  .custom-title {
          color: {{section.settings.title_color}};
          margin-bottom: {{section.settings.title_to_content_padding}}px;

        }
        .comparison-table-wrapper-{{section.id}}  .custom-subtitle {
          color: {{section.settings.subtitle_color}};
          margin-bottom: {{section.settings.subtitle_to_content_padding}}px;
          {% if section.settings.section_max_width != 'none' %}
            max-width: {{section.settings.subtitle_max_width}}px;
          {% endif %}
          line-height: 1.4;


        }

  /* 让 .comparison-table-container 支持横向滚动且内容不溢出 */
  .comparison-table-wrapper-{{section.id}} .comparison-table-container,.comparison-table-wrapper-{{section.id}} .comparison-table-header-item {
      overflow-x: auto;
      overflow-y: hidden;
      -webkit-overflow-scrolling: touch;
      width: 100%;
    }
  .comparison-table-wrapper-{{section.id}}  .comparison-table-item {
      background-color: #ffffff;
      border-bottom: 1px solid #E7E7E7;
      display: grid;
      min-width: calc({{ product_count }} * {{cel_width}}px + ({{ product_count }} - 1) * {{section.settings.col_gap}}px);
      grid-template-columns: repeat({{ product_count }}, {{cel_width}}px);
      gap: {{section.settings.col_gap}}px;
      padding: {{section.settings.row_gap}}px 0;

    }
      .comparison-table-wrapper-{{section.id}}  .comparison-table-item:last-child{
        border-bottom: none;
      }
      .comparison-table-wrapper-{{section.id}} .comparison-table-header-item{
        {% if product_count > 0 %}
          grid-template-columns: 146px{% for i in (2..product_count) %} 196px{% endfor %};
        {% endif %}
        gap: 24px;
        padding: 0 0 8px 0;
        border-bottom:none;
        }
  .comparison-table-wrapper-{{section.id}}  .cost-breakdown {
        text-align: {{section.settings.content_text_alignment}};

      }

  .comparison-table-wrapper-{{section.id}}  .printer-image {
        margin-bottom: 15px;
        max-width: 300px;
        width: 100%;
      }



  .comparison-table-wrapper-{{section.id}}  .printer-model,
  .comparison-table-wrapper-{{section.id}}  .printer-size {
        font-size: {{section.settings.spec_value_size}}px;
        color: #ea3f2e;
        text-align: {{section.settings.product_content_text_alignment}};
        width: 100%;
      }

  .comparison-table-wrapper-{{section.id}}  .printer-title {
        font-size: {{section.settings.spec_label_size}}px;
        margin-bottom: 4px;
        text-align: {{section.settings.product_content_text_alignment}};
        min-height: {{section.settings.product_name_min_height}}px;
        width: 100%;
        font-weight: 700;
        padding: 0 16px;
      }
      .comparison-table-wrapper-{{section.id}}  .printer-description {
        text-align: {{section.settings.product_content_text_alignment}};
        min-height: 40px;
        width: 100%;
        color:  #6D6D6D;
        font-size: 14px;
        font-weight: 400;
        line-height: 1.4; /* 140% */
        padding: 0 16px;
      }
      .comparison-table-wrapper-{{section.id}} .printer-button-wrapper{
        margin-top: auto;
        text-align: {{section.settings.product_content_text_alignment}};
        padding-top: 8px;

        }
        .comparison-table-wrapper-{{section.id}} .printer-button-add-to-cart{
            height: auto;
            display: flex;
            padding: 8px 16px;
            justify-content: center;
            align-items: center;
            color: #FFF;
            font-size: 14px;
            font-weight: 700;
            line-height: 1;
        }
      .comparison-table-wrapper-{{section.id}} .printer-learn-more{
        color: #000;
        font-size: 14px;
        margin-top: 8px;
        font-weight: 400;
        text-align: {{section.settings.product_content_text_alignment}};
        line-height: 1.4; /* 140% */
        text-decoration-line: underline;
    }
    .comparison-table-wrapper-{{section.id}} .printer-learn-more:hover{
      color: #FF8F1C;
    }
  .comparison-table-wrapper-{{section.id}}  .profit-amount {
        font-size: {{section.settings.spec_value_size}}px;;
        font-weight: 700;
      }

  .comparison-table-wrapper-{{section.id}}  .profit-section {
        padding: {{section.settings.table_cell_top_and_bottom_padding}}px {{section.settings.table_cell_lleft_and_right_padding}}px;
        text-align: {{section.settings.content_text_alignment}};
      }

  .comparison-table-wrapper-{{section.id}}  .spec-column-product {
        align-items: {{section.settings.product_content_text_alignment}};
        display: flex;
        flex-direction: column;
        width: 100%;
      }

  .comparison-table-wrapper-{{section.id}}  .spec-label {
        font-weight: 400;
        padding: {{section.settings.table_cell_top_and_bottom_padding}}px 0;
        text-align: {{section.settings.content_text_alignment}};
        font-size: {{section.settings.spec_label_size}}px;
        color: #3D3D3D;
      }
      .comparison-table-wrapper-{{section.id}} .spec-label-title{
        color: #000;
    }
      .comparison-table-wrapper-{{section.id}} .spec-label-desc{
        font-size: {{section.settings.spec_label_size | minus: 4}}px;
        color: #3D3D3D;
    }

  .comparison-table-wrapper-{{section.id}}  .spec-label-column-product,
  .comparison-table-wrapper-{{section.id}}  .spec-column {
        padding: {{section.settings.table_cell_top_and_bottom_padding}}px {{section.settings.table_cell_lleft_and_right_padding}}px;
        text-align: {{section.settings.content_text_alignment}};
        display: flex;
        align-items: center;
        font-size: {{section.settings.spec_value_size}}px;
        justify-content: {{section.settings.content_text_alignment}};
        font-weight: 700;
        word-break: break-word;
      }
      .comparison-table-wrapper-{{section.id}} .spec-row{
        display: flex;
        padding: 10px;
        flex-direction: column;
        align-items: start;
        font-size: {{section.settings.spec_value_size}}px;
        justify-content: center;
