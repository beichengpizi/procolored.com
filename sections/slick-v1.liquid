{% assign cell_align = section.settings.cell_align %}
{% assign wrap_around = section.settings.wrap_around %}
{% assign img_width = section.settings.img_width | append: 'x' %}
<style>
 .slick-list{
    width: 100%;
    overflow: hidden;
    margin: auto;
}
  .slick-{{section.id }} .flickity-nav.flickity-next {
    transform: none;
  }
.slick-list.draggable{
    padding-left:0 !important;
}

.slick-arrow {
    display: flex !important;
    cursor: pointer;
    position: absolute;
    background: transparent;
    font-family: LineAwesome;
    text-align: center;
    outline: none;
    z-index: 1;
    height: 40px;
    width: 40px;
    border-radius: 40px;
}
.slick-section__slick {
  display:flex;
}
.slick-section__slick.slick-slider {
  margin-bottom:10%;
}
.slick-section__slick:hover .slick-arrow {
  height: 45px;
  width: 45px;
}
 .slick-arrow i{
  color: #eee;
  font-size: 1.5rem;
  line-height: 40px;
}
.slick-section__slick:hover .slick-arrow i{
  color: #fff;
  font-size: 1.6rem;
  line-height: 45px;
}
 .slick-prev.slick-arrow {
    top: 45%;
    left: -1%;
}
 .slick-next.slick-arrow{
    top: 45%;
    right: -1%;
}

.step-image{
  width:auto;
  background:unset;
}
.step-image img {
  width: 96%;
  height: 100%;
  background:unset;
  margin: 0 auto 0 0;
  border-radius: 20px;
}
 .slick-slide {
  padding: 0 3px;
}
.flickity-nav {
  opacity:0.7;
}
.flickity-nav.flickity-prev {
  left: 15px;
  top: 47%;
}
.flickity-nav.flickity-next {
  right: 15px;
  top: 47%;
}
.row.caption {
   width: 100%;
   font-size:40px;
   line-height:52px;
   padding: 3% 2% 3%;
}
.caption .text-title {
  width: 100%;
  text-align: center;
  font-size:40px;
  line-height:52px;
  color: #000;
  font-weight: 600;
}
.step-image .text {
  width: 100%;
  text-align: left;
  margin-top: 30px;
}
.step-image .text h5{
  font-weight: unset;
  font-size:17px;
  line-height:20px;
  color: #000;
}
@media only screen and (max-width: 769px) {
   .step-image img{
     border-radius: 10px;
   }
}
 
</style>
<div class="row">
    <div class="caption">
        <p class="text-title text-center">{{ section.settings.title }}</p>
    </div>
    <div class="small-12 columns">
     <div class="slick-section__slick slick-{{section.id }}">
        {% for block in section.blocks %}
          <div class="step-image">
            {% if block.settings.img != blank %}
              <img src="{{ block.settings.img | img_url: img_width }}" alt="{{ block.settings.img_alt }}" />
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            <div class="text"><h5>{{ block.settings.title }}</h5></div>
          </div>
        {% endfor %}

      </div>
     
    </div>
</div>




<script type="text/javascript" async src="{{ 'slick.min.js' | asset_url }}"></script>
<script type="text/javascript">

$(document).ready(function(){
  
  $('.slick-section__slick').slick({
    dots: false,
    infinite:false,
    autoplay: false,
    autoplaySpeed: 3000,
    slidesToShow: 3,
    slidesToScroll: 1,
    initialSlide:1,
    centerMode: true,
    centerPadding: '55px',
    initialSlide:1,
    prevArrow: '<div class="flickity-nav flickity-prev" tabindex="0"><img src="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/left-arrow.svg?v=1721899692"></div>',
    nextArrow: '<div class="flickity-nav flickity-next" tabindex="0"><img src="https://cdn.shopify.com/s/files/1/0509/3454/6613/files/right-arrow.svg?v=1721899692"></div>',
     responsive: [
    {
      breakpoint: 768,
      settings: {
        dots: true,
        arrows: false,
        centerMode: true,
        initialSlide:1,
        centerPadding: '40px',
        slidesToShow: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        dots: true,
        arrows: false,
        initialSlide:0,
        centerMode: true,
        centerPadding: '30px',
        slidesToShow: 1
      }
    }
  ]
  });

  
});

</script>


