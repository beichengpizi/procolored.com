    observeParents: true,
    scrollbar: {
      el: `.swiper-scrollbar-{{ section.id }}`,
      hide: false,
    },
    breakpoints: {
      1024: {
        slidesPerView: {{ section.settings.product_num_mobile_swiper }},
        spaceBetween: 10,
      },
      768: {
        slidesPerView:{{ section.settings.product_num_mobile_swiper }},
        spaceBetween: 10,
      },
    },
    on: {
      imagesReady: function () {
        setEqualSlideHeights();
      },
      resize: function () {
        setEqualSlideHeights();
      },
    },
  });

  function setEqualSlideHeights() {
    const container = document.querySelector(
      '.black-friday-official-promotion-products-swiper-container-{{ section.id }}'
    );
    if (!container) return;
    const slides = container.querySelectorAll('.swiper-slide');
    let maxHeight = 0;
    slides.forEach((slide) => {
      slide.style.height = 'auto'; // reset
      const rect = slide.getBoundingClientRect();
      if (rect.height > maxHeight) maxHeight = rect.height;
    });
    slides.forEach((slide) => {
      slide.style.height = maxHeight + 'px';
    });
  }

  // 若图片懒加载，确保图片加载完后高度再调整
  document.addEventListener('DOMContentLoaded', function () {
    setTimeout(setEqualSlideHeights, 600);
    window.addEventListener('load', setEqualSlideHeights);
  });
</script>

