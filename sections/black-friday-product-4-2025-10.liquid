  // 修复每个slide高度保持一致
  new Swiper('.black-friday-official-promotion-products-swiper-container-{{ section.id }}', {
    slidesPerView: {{ section.settings.product_num_mobile_swiper }},
    loopedSlides: 10,
    spaceBetween: 20,
