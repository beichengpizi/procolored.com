{{- 'multicolumn.css' | asset_url | stylesheet_tag -}}
<style>
	#shopify-section-{{ section.id }} {
		background: #FFF5EA;
	}

	#shopify-section-{{ section.id }} .what-you-get-section {
		max-width: 1200px;
		padding: 0;
	}

	#shopify-section-{{ section.id }} .multicolumn__column {
		padding: 0 24px;
		margin: 0;
	}

	#shopify-section-{{ section.id }} .multicolumn__image {
		margin-bottom: 0;
		width: 100% !important;
	}

	#shopify-section-{{ section.id }} .block-title {
		color: #121212;
		font-size: 20px;
		font-weight: 700;
		line-height: 30px; /* 150% */
		padding: 12px 24px;
		background: rgba(255, 255, 255);
		border-radius: 0 0 16px 16px;
		position: relative;
		transform: translateY(-12px);
	}

	#shopify-section-{{ section.id }} .multicolumn__inner {
		padding: 24px 48px;
	}

	#shopify-section-{{ section.id }} .row .columns {
		padding: 0;
		flex: 1;
	}

	#shopify-section-{{ section.id }} .row.no-padding {
		gap: 48px;
	}

	#shopify-section-{{ section.id }} .row .row {
		margin-left: 0;
		margin-right: 0;
	}

  #shopify-section-{{ section.id }} .multicolumn__image--inner img {
      border-radius: 16px 16px 0 0;
      padding: 24px 24px 0 24px;
      background: #fff;
  }

  #shopify-section-{{section.id}} .education-multicolumn-title {
    text-align: center;
    width: 100%;
    color: #121212;
    text-align: center;
    font-family: Mulish;
    font-size: 40px;
    font-style: normal;
    font-weight: 800;
    line-height: 60px; /* 150% */
  }

  @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .swiper-wrapper {
      transform: none !important;
    }
  }

  @media screen and (max-width: 768px) {
    #shopify-section-{{section.id}} .multicolumn__inner {
        overflow: hidden;
        padding: 24px 0 0 0;
    }

    #shopify-section-{{section.id}} .education-multicolumn-title {
      font-size: 24px;
      line-height: 1.3;
    }

    #shopify-section-{{section.id}} .section-spacing {
      margin: 32px 0;
    }

    #shopify-section-{{section.id}} .multicolumn__column {
      width: 280px;
      flex: none;
    }

    #shopify-section-{{ section.id }} .row .row {
      width: fit-content;
      flex-wrap: nowrap;
      overflow: visible;
    }

    #shopify-section-{{ section.id }} .row.no-padding {
      gap: 0;
    }

    #shopify-section-{{ section.id }} .multicolumn.text-alignment--center .section-header {
      padding-bottom: 0;
    }

    #shopify-section-{{ section.id }} .swiper-pagination {
      position: static;
      height: fit-content;
      text-align: center;
      height: fit-content;
      display: flex;
      justify-content: center;
      margin-top: 24px;
      gap: 8px;
      height: 12px;
    }

    #shopify-section-{{ section.id }} .swiper-pagination-bullet {
      background: transparent;
      border: 1px solid #121212;
      opacity: 1;
    }

    #shopify-section-{{ section.id }} .swiper-pagination-bullet-active {
      background: #E60012;
      position: relative;
      border: none;
    }

    #shopify-section-{{ section.id }} .swiper-pagination-bullet-active::after {
      content: "";
      background: transparent;
      border-radius: 99px;
      border: 1px solid #E60012;
      width: 12px;
      height: 12px;
      transform: translate(-6px, -2px);
      position: absolute;
    }

    #shopify-section-{{ section.id }} .block-title {
      margin-bottom: 0;
      font-size: 18px;
    }
  }
</style>
{%- liquid
  assign section_heading = section.settings.heading
  assign marker_style = section.settings.marker_style
  assign section_description = section.settings.description
  assign columns_desktop = section.settings.columns_desktop
  assign heading_size = section.settings.heading_size
  assign mobile_swipe = section.settings.mobile_swipe
  assign image_ratio = section.settings.image_ratio
  assign text_alignment = section.settings.text_alignment

  assign color_heading = section.settings.color_heading
  assign marker_color = section.settings.marker_color
  assign color_text = section.settings.color_text
  assign color_links = section.settings.color_links

  assign disable_top_spacing = section.settings.disable_top_spacing
  assign disable_bottom_spacing = section.settings.disable_bottom_spacing

  case columns_desktop
    when 2
      assign columns_desktop_class = 'medium-6'
    when 3
      assign columns_desktop_class = 'medium-4'
    when 4
      assign columns_desktop_class = 'medium-3'
    when 5
      assign columns_desktop_class = 'medium-1/5 large-1/5'
  endcase
-%}
<div
  class="multicolumn {% if mobile_swipe %} swipe-on-mobile{% endif %} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %} text-alignment--{{ text_alignment }}"
  style="--color-heading: {{ color_heading }}; --color-text: {{ color_text }}; --color-accent: {{ color_links }}; --color-accent-rgb: {{ color_links.rgb | replace: ' ' , ',' }};"
>
  <div class="row what-you-get-section">
    <div class="small-12 columns">
      {% render 'section-header',
        section_heading: section_heading,
        section_description: section_description,
        marker_color: marker_color,
        marker_style: marker_style
      %}
      <div class="multicolumn__inner swiper mySwiper text-{{ text_alignment }}">
        <div class="row align-stretch no-padding swiper-wrapper">
          {%- for block in section.blocks -%}
            <div class="multicolumn__column swiper-slide small-12 {{ columns_desktop_class }} columns">
              {% if block.settings.image != blank %}
                {%- liquid
                  assign ratio = 1
                  assign max_width = block.settings.image.width | divided_by: 2 | append: 'px'
                  assign image_link = block.settings.image_link
                  if image_ratio == 'adapt'
                    assign ratio = block.settings.image.aspect_ratio
                  endif
                  if block.settings.image_full_width
                    assign max_width = '100%'
                  endif
                -%}
                <figure class="multicolumn__image" style="width: {{ max_width }};">
                  <div
                    class="multicolumn__image--inner aspect-ratio aspect-ratio--{{ image_ratio }}"
                    style="--ratio-percent: {{ 1 | divided_by: ratio | times: 100 }}%;"
                  >
                    {% if image_link != blank %}
                      <a href="{{ image_link }}">
                    {% endif %}
                    {%- render 'responsive-image', image: block.settings.image, sizes: '407x0,814x0', retina: true -%}
                    {% if image_link != blank %}
                      </a>
                    {% endif %}
                  </div>
                </figure>
              {% endif %}
              {% if block.settings.title != blank %}
                <h4 class="{{ heading_size }} block-title">{{ block.settings.title | newline_to_br }}</h4>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
              {% endif %}
              {% if block.settings.link_label != blank %}
                {% render 'text-button', url: block.settings.link, title: block.settings.link_label %}
              {% endif %}
            </div>
          {%- endfor -%}
        </div>

        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
</div>

<script>
   var swiper = new Swiper("#shopify-section-{{ section.id }} .mySwiper", {
    breakpoints: {
      768: {
        slidesPerView: 1.3,
        spaceBetween: 12,
        slidesOffsetAfter: 32,
        slidesOffsetBefore: 32,
        allowTouchMove: true,
      }
    },
    pagination: {
      el: "#shopify-section-{{ section.id }} .swiper-pagination",
    },
    slidesPerView: 3,
    spaceBetween: 0,
    slidesOffsetAfter: 48,
    slidesOffsetBefore: 48,
    allowTouchMove: false,
  });
</script>

