{% endcomment %}

{% assign cell_align = section.settings.cell_align %}
{% assign wrap_around = section.settings.wrap_around %}
{% assign img_width = section.settings.img_width | append: 'x' %}
<style>
.flickity-index-slider {
  position:relative;
  height:auto;
  overfollow:hidden;
}
  .carousel {
  background: #FAFAFA;
}

.carousel-cell {
  width: 33%;
  height: 220px;
  margin-right: 10px;
  background: #8C8;
  border-radius: 5px;
  counter-increment: carousel-cell;
}

/* cell number */
.carousel-cell:before {
  display: block;
  text-align: center;
  content: counter(carousel-cell);
  line-height: 200px;
  font-size: 80px;
  color: white;
}
.carousel-cell {
  width: 33%;
  height: 200px;
  margin-right: 5px;
}
.carousel-cell img {
  width: 96%;
  marign:auto;
}
 @media (max-width: 768px) {
  .slideshow-prev,
  .slideshow-next {
    display: none;
  }
}

.flickity-prev-next-button.previous,
.flickity-prev-next-button.next {
  position: absolute;
  z-index: 5;
  top: 46%;
  transform: translateY(-50%);
}

.flickity-prev-next-button.previous {
  left: 15px;
}

.flickity-prev-next-button.next  {
  right: 15px;
}

.flickity-button svg path {
  stroke: white;
  fill: white;
}

.flickity-button {
  width: 32px;
  height: 32px;
  display: flex;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 100%;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.flickity-button svg {
  width: 10px;
  height: 10px;
}
.flickity-viewport {
  min-height:300px;
}
  .row.caption {
    text-align:center;
  }
  .row.caption .text-title{
    width:100%;
    font-size:40px;
    line-height:52px;
    font-weight:bold;
  }
</style>
<div class="row {% if full_width %} full-width-row-full{% endif %}">
  <div class="flickity-section-{{ section.id }} flickity-index-slider item" style="background-color: {{ section.settings.bg }};width: 100%;">
    <div class="small-12 columns">
      <div class="row caption">
        <p class="text-title text-center" style="margin-bottom:{{ section.settings.title_mb }}px">{{ section.settings.title }}</p>
      </div>
      <div class="flickity-section__carousel carousel-{{section.id }} text-center"
          data-flickity='{
            "cellAlign": "{{ cell_align }}",
            "pageDots": false,
            "freeScroll": false,
            "contain": true,
            "fullscreen": false,
            "prevNextButtons": true,
            "prevPrevButtons": true,
            "wrapAround": {{ wrap_around }}
          }'>
        {% for block in section.blocks %}
          {% assign block_img = block.settings.img %}
          {% assign block_url = block_product.selected_or_first_available_variant %}
          {% assign featured_img_src = block_first_variant.featured_img.src | default: block_product.featured_image.src %}
          <div class="carousel__cell" style="width:{{ section.settings.cell_width }};margin-right:{{ section.settings.mr }}px">
            {% if block.settings.img != blank %}
              <img src="{{ block.settings.img | img_url: img_width }}" data-flickity-lazyload="{{ block.settings.img}}" alt="{{ block.settings.img_alt }}" />
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
             <h5>{{ block.settings.title }}</h5>
          </div>
        {% endfor %}

      </div>

    </div>
  </div>
</div>
