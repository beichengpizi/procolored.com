<script type="text/javascript">
  $(document).ready(function () {
      const totalNums = {{ section.blocks.size }}

      if (totalNums > 1) {
          // direction: 'vertical', 解决 slide 高度溢出问题，需设置 autoHeight 为 true
          const custom_product_multiple_slider_swiper = new Swiper('.video-up-and-down-switching-mySwiper-{{section.id}}', {
            direction: 'vertical',
            effect : 'fade',
            fadeEffect: {
              crossFade: true,
            },
            height: {{section.settings.material_height}},
            slidesPerView: 1,
            spaceBetween: 0,
            allowTouchMove: false,
            scrollbar: {
              el: '.video-up-and-down-switching-swiper-scrollbar-{{ section.id }}',
            },
            breakpoints: {
              //当宽度小于等于768时显示
              768: {
                height: {{section.settings.material_height_mb}},

              },
            },
          });

          // 播放视频 .video1 下的 video 到结尾自动切换下一个
          function setupVideoAutoSwitch() {
            // 获取所有 .video1 下的 video 元素
            const videos = document.querySelectorAll('.video-up-and-down-switching-mySwiper-{{section.id}} .swiper-slide .video1 video');
            if (!videos.length) return;

            videos.forEach((video, idx) => {
              video.addEventListener('ended', function() {
                // 切换到下一个slide
                let nextIndex = idx + 1;
                if (nextIndex >= videos.length) nextIndex = 0; // 回到第一个，循环
                custom_product_multiple_slider_swiper.slideTo(nextIndex);

                // 确保下一个视频从头开始播放，可能需要等待slide切换完成
                setTimeout(() => {
                  // 重新获取当前活跃slide下的 .video1 video
                  const slides = document.querySelectorAll('.video-up-and-down-switching-mySwiper-{{section.id}} .swiper-slide');
                  slides.forEach(s => {
                    // 只有当前slide播放，其它全部暂停
                    const v = s.querySelector('.video1 video');
                    if (v) {
                      if (s.classList.contains('swiper-slide-active')) {
                        v.currentTime = 0;
                        v.play();
                      } else {
                        v.pause();
                        v.currentTime = 0;
                      }
                    }
                  });
                }, 400); // 适当延迟，等待swiper切换完成再play
              });
            });

            // 可选：初始就播放第一个视频
            if (videos[0]) {
              videos[0].currentTime = 0;
              videos[0].play();
            }
          }

          // swiper切换时，只让当前slide的 .video1 video 播放，其它全部暂停
          custom_product_multiple_slider_swiper.on('slideChange', function () {
            const slides = document.querySelectorAll('.video-up-and-down-switching-mySwiper-{{section.id}} .swiper-slide');
            slides.forEach(slide => {
              const video = slide.querySelector('.video1 video');
              if (video) {
                if (slide.classList.contains('swiper-slide-active')) {
                  video.currentTime = 0;
                  video.play();
                } else {
                  video.pause();
                  video.currentTime = 0;
                }
              }
            });
          });

          // 页面加载后初始化监听
          setupVideoAutoSwitch();

      }
    //  会员登录弹窗
      const modalLogin = document.querySelector('modal-login');
      $('#video-up-and-down-switching-{{section.id}} .button_link_login_button').on('click', function () {
        modalLogin.showModal(modalLogin.fetchForm.login.innerHTML);
        const loginForm = modalLogin.showModal(modalLogin.fetchForm.login.innerHTML);
        modalLogin.loginBindEvent(loginForm.el);
      })
  });
</script>
