<div class="relative pt-5 pb-11.5 md:pt-17.5 md:pb-[120px]" data-section-type="maintenance-independent">
  {%- if section.settings.headding != blank -%}
    <div class="container pb-4.5 md:pb-15">
      <h2 class="lg:text-center m-0 text-2xl md:text-3xl lg:text-4xl">{{ section.settings.headding }}</h2>
    </div>
  {%- endif -%}

  <div class="max-w-5xl mx-auto px-4 md:px-5">
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-8 lg:gap-x-[30px] lg:gap-y-[90px]">
      {%- for block in section.blocks -%}
        <div class="bg-white relative rounded-lg overflow-hidden">
          <div class="flex-shrink-0 aspect-[4/3] bg-gray-50">
            {%- if block.settings.image -%}
              {%- liquid
                assign image = block.settings.image
              -%}
              <img
                data-src="{{ image | image_url }}"
                class="lazyload object-cover object-center w-full h-full {% unless settings.lazy_loading %} no-blur{% endunless %}"
                width="{{ image.src.width }}"
                height="{{ image.src.height }}"
                alt="{{ image.alt }}"
              >
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder_svg_tag' }}
            {%- endif -%}
          </div>
          <div class="flex flex-col justify-center items-center gap-1 px-4 pb-3 -mt-3 md:pb-8 md:-mt-6">
            <div class="aspect-square w-[30px] h-[30px] md:w-[50px] md:h-[50px] rounded-full border border-solid border-white overflow-hidden">
              {%- if block.settings.avatar -%}
                {%- liquid
                  assign image = block.settings.avatar
                -%}
                <img
                  data-src="{{ image | image_url }}"
                  class="lazyload object-cover object-center w-full h-full bg-gray-50 {% unless settings.lazy_loading %} no-blur{% endunless %}"
                  width="{{ image.src.width }}"
                  height="{{ image.src.height }}"
                  alt="{{ image.alt }}"
                >
              {%- else -%}
                {{ 'collection-1' | placeholder_svg_tag: 'placeholder_svg_tag' }}
              {%- endif -%}
            </div>
            <p class="m-0 text-black text-xs font-semibold sm-max:text-[48%]">
              {{ block.settings.name }}
            </p>
            <div class="flex items-center gap-x-1 text-gray-500">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-3 md:size-4"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
              </svg>

              <span class="text-xs sm-max:text-[48%]">{{ block.settings.address }}</span>
            </div>
          </div>

          {%- if block.settings.tags != blank -%}
            {%- assign tags = block.settings.tags | split: '|' -%}
            <div class="absolute top-0 w-full px-2 py-2 flex items-center flex-wrap gap-1 md:gap-2 justify-end">
              {%- for tag in tags -%}
                <span class="flex items-center rounded-full px-2 md:px-3 sm-max:text-[50%] border border-solid border-[#646464] text-xs h-3 md:h-[22px] text-[#646464] bg-white">
                  {{- tag -}}
                </span>
              {%- endfor -%}
            </div>
          {%- endif -%}

          {%- if block.settings.link != blank -%}
            <a class="absolute inset-0" href="{{ block.settings.link }}" target="_blank" rel="noopener noreferrer">
              <span class="sr-only">view {{ block.settings.name }}</span>
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "维修工程师",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "headding",
      "label": "标题",
      "default": "Find Repair Engineer Near"
    },
    {
      "type": "textarea",
      "id": "descriptiton",
      "label": "描述"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "维修工程师",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "背景图"
        },
        {
          "id": "link",
          "type": "url",
          "label": "跳转链接"
        },
        {
          "type": "text",
          "id": "name",
          "label": "名字",
          "default": "Peter Ding"
        },
        {
          "type": "text",
          "id": "address",
          "label": "地址",
          "default": "Sacramento, CA"
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "头像"
        },
        {
          "type": "textarea",
          "id": "tags",
          "label": "标签，使用英文的分隔线'|'.建议不超过三个.",
          "default": "L1800|R1390|UV DTF Mini"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "维修工程师"
    }
  ]
}
{% endschema %}
